<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Note #<%= @note.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Event</dt>
              <dd><%= Event.find_by({:id => @note.event_id}).name %></dd>

              <dt>Note body</dt>
              <dd><%= @note.note_body %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/notes" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/notes/<%= @note.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_note/<%= @note.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
