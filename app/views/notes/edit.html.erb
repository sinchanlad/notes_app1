<!-- Validation failure messages -->

<% if @note.errors.any? %>
  <% @note.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Note #<%= @note.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_note/<%= @note.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for event_id -->
          <div class="form-group">
            <label for="event_id" class="col-sm-2 control-label">
              Event
            </label>
            <div class="col-sm-10">
              <input type="text" id="event_id" name="event_id" placeholder="Event" class="form-control" value="<%= @note.event_id %>">
            </div>
          </div>

          <!-- Label and input for note_body -->
          <div class="form-group">
            <label for="note_body" class="col-sm-2 control-label">
              Note body
            </label>
            <div class="col-sm-10">
              <textarea id="note_body" name="note_body" placeholder="Note body" class="form-control" rows="3"><%= @note.note_body %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Note
              </button>
              or
              <a href="/notes/<%= @note.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
